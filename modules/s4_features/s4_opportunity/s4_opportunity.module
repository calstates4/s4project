/**
 * Implements hook_
 */
function s4_opportunity_block_view($delta) {
  module_load_include('inc', 's4_opportunity', 's4_opportunity.block');
  if(arg(0) == 'relation' && arg(1)) {
    $relation = relation_load(arg(1));
  }
  if(arg(0) == 'opportunities' && arg(2)) {
    $relation = relation_load(arg(2));
  }

  switch($delta) {
    case 'view_public':
      return array('content' => l(t('View public list'), 'opportunities/list', array('attributes' => array('class' => array('btn')))));
    case 'view_manage':
      if(!user_access('administer opportunities')) {
        return;
      }
      return array('content' => l(t('Manage opportunities'), 'opportunities/manage', array('attributes' => array('class' => array('btn')))));
    case 'new_opportunity':
      return array('content' => s4_opportunity_create_form());
    case 'opportunity_start':
      $content = s4_opportunity_block_start();
      if(!$content) {
        return;
      }
      return array('subject' => variable_get('s4_opportunity_begin_subject', t('Start a new opportunity')),
        'content' => $content);
    case 'opportunity_progress':
      if(!isset($_SESSION['s4_opportunity_create']) || !user_access('start new opportunities')) {
        return;
      }
      return array('content' => s4_opportunity_create_progress());
    case 'placement_approval':
      if($relation) {
        return array('subject' => t('Approval status'),
              'content' => _s4_opportunity_block_placement_approval($relation));
      }
    case 'placement_form':
      if($relation) {
        return array('subject' => t('Placement form'),
              'content' => _s4_opportunity_block_placement_form($relation));
      }
      break;
    case 'opportunity_approval':
      global $user;
      $results = s4_opportunity_get_require_approval($user);
      if(count($results)) {
        return array('subject' => t('Approve opportunities'),
                     'content' => '<p>'. format_plural(count($results), 'You have one opportunity awaiting approval.', 'You have @count opportunities awaiting approval.', array('@count' => count($results))) .'</p><p>'.
                     l(format_plural(count($results), 'Approve opportunity', 'Approve opportunities'), '/opportunities/faculty', array('attributes' => array('class' => array('btn', 'btn-large', 'btn-primary')))) .'</p>');
      }
      break;
    case 'opportunity_place':
      return array('content' => _s4_opportunity_place_button());
  }
}

