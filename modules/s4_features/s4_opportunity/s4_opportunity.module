/**
 * Helper function to determine if user can place with an opportunity
 */
function s4_opportunity_user_can_place($user, $opportunity) {
  $user = user_load($user->uid);
  $user_programs = field_get_items('user', $user, 'field_site_restrict');
  $opportunity_programs = field_get_items('s4_opportunity', $opportunity, 'field_site_restrict');
  $results = array();
  $programs = array();
  foreach($opportunity_programs as &$program) {
    $programs[$program['tid']] = $program['tid'];
  }
  foreach($user_programs as $program) {
    if(isset($programs[$program['tid']])) {
      $results['programs'][$program['tid']] = taxonomy_term_load($program['tid']);
    }
  }
  $courses = views_get_view_result('user_courses', 'block_2', $user->uid);
  if($courses) {
    foreach($courses as $course) {
      $course = node_load($course->nid);
      $course_programs = field_get_items('node', $course, 'field_site_restrict');
      foreach($course_programs as $program) {
        if(isset($programs[$program['tid']])) {
          $results['courses'][$course->nid] = $course;
        }
      }
    }
  }
  return (count($results)) ? $results : false;
}

function s4_opportunity_get_user_placements($user = FALSE, $current = TRUE) {
  if(!$user) {
    global $user;
  }

  $query = db_select('field_data_endpoints', 'e')
           ->condition('e.endpoints_entity_type', 'user')
           ->condition('e.endpoints_entity_id', $user->uid)
           ->condition('e.entity_type', 'relation')
           ->condition('e.bundle', 'opportunity_placement')
           ->fields('e', array('entity_id'));
  if($current) {
    $query->leftJoin('field_data_field_dates', 'd', 'd.entity_id = e.entity_id AND d.entity_type = e.entity_type');
    $query->condition('d.field_dates_value', date('Y-m-d'), '<=')
          ->condition('d.field_dates_value2', date('Y-m-d'), '>=');
  }
  $results = $query->execute()->fetchAllKeyed(0,0);
  foreach($results as &$result) {
    $result = _s4_opportunity_get_relation(relation_load($result));
  }
  return $results;
}

function s4_opportunity_s4_student_signup_list_alter(&$list, $values) {
  $user = user_load($values->uid);
  $opportunities = s4_opportunity_get_user_placements($user);
  if(!count($opportunities)) {
    return;
  }
  foreach($opportunities as $rid => $opportunity) {
    $type = s4_opportunity_type_load($opportunity['opportunity']->type);
    $list[] = t('@type: !link', array('@type' => $type->label, '!link' => l($opportunity['opportunity']->name, 'relation/'. $rid)));
  }

}

function _s4_opportunity_place_button($opportunity = false) {
  if(!$opportunity) {
    $menu = menu_get_item();
    if($menu['load_functions'][1] != 's4_opportunity_load') {
      return;
    }
    $opportunity = $menu['page_arguments'][0];
  }
  $type = s4_opportunity_type_load($opportunity->type);
  if($type->data['students_can_place'] && isset($_SESSION['s4_signup_course']) || isset($_SESSION['s4_signup_program'])) {
    $destination = (isset($_SESSION['s4_signup_course'])) ? 'course' : 'program';
    if(isset($_SESSION['s4_signup_program']) && is_array($_SESSION['s4_signup_program'])) {
      $program = array_pop($_SESSION['s4_signup_program']);
    }
    elseif(isset($_SESSION['s4_signup_program'])) {
      $program = $_SESSION['s4_signup_program'];
    }
    dpm($program);
    $destination_id = (isset($_SESSION['s4_signup_course'])) ? $_SESSION['s4_signup_course'] : $program;
    return l(t('Select this @type', array('@type' => $type->label)),'opportunities/place/self/'. $opportunity->s4_opportunity_id .'/'.  $destination .'/'. $destination_id,
          array('attributes' => array('class' => array('btn', 'btn-success'))));
  }
}
