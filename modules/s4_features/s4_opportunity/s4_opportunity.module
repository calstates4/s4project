                                                   'placement' => $params['placement'],
                                                   'user' => $params['student']
                                                   ));
      $message['body'][] = check_markup($body, $params['type']->data['approval_email_body']['format']);
      break;
    case 'site_staff_approval_email':
      $message['subject'] = $params['type']->data['site_staff_approval_email_subject'];
      $body = token_replace($params['type']->data['site_staff_approval_email_body']['value'], array('s4_site_staff' => $params['site_staff'],
                                                   's4_opportunity' => $params['opportunity'],
                                                   'placement' => $params['placement'],
                                                   'user' => $params['student']
                                                   ));
      $message['body'][] = check_markup($body, $params['type']->data['site_staff_approval_email_body']['format']);
      break;     
  }
}

