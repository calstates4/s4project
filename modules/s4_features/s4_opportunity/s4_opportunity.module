function s4_opportunity_tokens($type, $tokens, array $data = array(), array $options = array()) {
  $replacements = array();
  if ($type == 's4_opportunity') {
    $opportunity_type = s4_opportunity_type_load($data['opportunity']->type);
    $replacements['[s4_opportunity:approve_link]'] = url('opportunities/approve/'. $data['placement']->rid, array('absolute' => TRUE));
    $replacements['[s4_opportunity:placement_form_link]'] = url('opportunities/form/'. $data['placement']->rid, array('absolute' => TRUE));
    $site_staff = field_get_items('relation', $data['placement'], 'field_coordinator');
    if($site_staff & $site_staff[0]['nid']) {
      $site_staff = node_load($site_staff[0]['nid']);
      $email = field_get_items('node', $site_staff, 'field_email');
      if($email[0]['email']) {
        $key = md5($data['placement']->rid . $email[0]['email'] . drupal_get_hash_salt());
        $replacements['[s4_opportunity:site_staff_approve_link]'] = url('opportunities/approve/'. $data['placement']->rid, array('query' => array('key' => $key, 'email' => $email[0]['email']), 'absolute' => TRUE));   
      }
    }
    if(is_object($data['s4_opportunity']) && property_exists($data['s4_opportunity'], 'type')) {
      $entity = clone $data['s4_opportunity'];
      list($id, $vid, $bundle) = entity_extract_ids('s4_opportunity', $entity);
      $fields = field_info_instances('s4_opportunity', $bundle);

      foreach ($fields as $field_name => $field_instance) {
        $field_token_name = strtr($field_name, '_', '-');
        // Replace the [entity:field-name] token.
        $original = $tokens[$field_token_name];
        if (empty($entity->{$field_name})) {
          $replacements[$original] = '';
          continue;
        }
        if($original) {
          $field_output = field_view_field('s4_opportunity', $entity, $field_name);
          $output = array();
          foreach (element_children($field_output) as $key) {
            $output[$key] = $field_output[$key];
          }
          $replacements[$original] = render($output);
        }
      }
      unset($entity);
    }
  }
  return $replacements;
}

